{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,

  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--indent-size=2",
    "--ignore E121",
    "--max-line-length 100",
    "--aggressive"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "editor.formatOnSave": true
}
